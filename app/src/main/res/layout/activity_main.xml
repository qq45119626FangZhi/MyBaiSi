<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RadioGroup
        android:paddingTop="2dp"
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:background="#11000000"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_essence"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/essence_button_selector"
            android:text="精华" />
        <RadioButton
            android:id="@+id/rb_newspost"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/newposts_button_selector"
            android:text="新帖" />
        
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/writeposts_button_selector"
                android:layout_height="wrap_content"
                android:id="@+id/rb_write"/>
        </LinearLayout>

        <RadioButton
            android:id="@+id/rb_follow"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/follow_button_selector"
            android:text="关注" />
        <RadioButton
            android:id="@+id/rb_me"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/user_button_selector"
            android:text="我的" />

    </RadioGroup>

</LinearLayout>
